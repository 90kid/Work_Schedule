<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllers.MenuScreenController">
    <top>
        <MenuBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="29.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Opiekunowie">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAddKeeper" text="Dodaj" />
                        <MenuItem mnemonicParsing="false" onAction="#handleDeleteKeeper" text="Usun" />
                        <MenuItem mnemonicParsing="false" onAction="#handleNewScheduleKeepers" text="Nowy grafik" />
                        <MenuItem mnemonicParsing="false" onAction="#handleGenerateKeepersSchedule" text="Generuj" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Pielegniarki">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Dodaj" />
                        <MenuItem mnemonicParsing="false" text="Usun" />
                        <MenuItem mnemonicParsing="false" text="Nowy grafik" />
                        <MenuItem mnemonicParsing="false" text="Generuj" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Oddziały">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleSelectDepartment" text="Wybierz oddział" />
              </items>
            </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
